{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/notifications/detect-scroll-proposals",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/delta/pipeline",
      "schedule": "5 0 * * *"
    },
    {
      "path": "/api/cron/build-clusters",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-rate-limits",
      "schedule": "0 */4 * * *"
    }
  ],
  "functions": {
    "api/notifications/detect-scroll-proposals/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 300
    },
    "api/delta/pipeline/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 800
    },
    "api/cron/build-clusters/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 800
    },
    "api/admin/stance-pipeline/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 600
    },
    "api/admin/build-clusters/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 600
    },
    "api/admin/delta-cache/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 60
    },
    "api/cron/cleanup-rate-limits/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 60
    }
  }
} 